<Window x:Class="AutoActivator.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="L.I.S.A Auto-Activator" Height="450" Width="800" Background="#F3F3F3">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#2C3E50">
            <TextBlock Text="L.I.S.A" Foreground="White" FontSize="24" Margin="20" FontWeight="Bold"/>
            <Button Content="Extraction" Padding="10" Margin="5" Click="BtnRun_Click" Background="#34495E" Foreground="White" BorderThickness="0"/>
            <Button Content="Activation" Padding="10" Margin="5" Click="BtnActivation_Click" Background="#34495E" Foreground="White" BorderThickness="0"/>
            <Button Content="Comparaison" Padding="10" Margin="5" Click="BtnComparison_Click" Background="#34495E" Foreground="White" BorderThickness="0"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20">
            <TextBlock Text="Extraction de Contrat" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Numéro de contrat :"/>
            <TextBox x:Name="TxtContract" Margin="0,5,0,10" Padding="5"/>

            <Button x:Name="BtnRun" Content="Lancer l'extraction" Click="BtnRun_Click" Background="#27AE60" Foreground="White" Padding="10"/>

            <TextBlock x:Name="TxtStatus" Margin="0,20,0,5" TextWrapping="Wrap"/>
            <TextBlock x:Name="LnkFile" Visibility="Collapsed">
                <Hyperlink Click="Hyperlink_Click">
                    <Run Text="Ouvrir le fichier généré"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>